@model MeBeCare.Models.ContactMessage

<h2>Liên hệ với chúng tôi</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Index" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Họ và tên</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Chủ đề</label>
        <input asp-for="Subject" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Độ tuổi của con (nếu có)</label>
        <input asp-for="ChildAge" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Nội dung tin nhắn</label>
        <textarea asp-for="Message" rows="5" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Gửi</button>
</form>
