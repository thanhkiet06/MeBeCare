@model MeBeCare.Models.VaccinationRecord

<h2>✏️ Sửa Lịch Tiêm Chủng</h2>

<form asp-action="EditVaccination" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="VaccinationID" />

    <div class="form-group">
        <label>Bé</label>
        <select asp-for="ChildID" class="form-control">
            @foreach (var child in ViewBag.Children)
            {
                <option value="@child.ChildID" selected="@(child.ChildID == Model.ChildID ? "selected" : null)">
                    @child.FirstName @child.LastName
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Tên vắc-xin</label>
        <input asp-for="VaccineName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày tiêm</label>
        <input asp-for="VaccinationDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ghi chú</label>
        <input asp-for="Notes" class="form-control" />
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="Completed">Completed</option>
            <option value="Pending">Pending</option>
            <option value="Missed">Missed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">💾 Lưu</button>
    <a asp-action="ManageVaccinations" class="btn btn-secondary mt-3">❌ Hủy</a>
</form>
