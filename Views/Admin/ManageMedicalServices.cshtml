@model IEnumerable<MeBeCare.Models.MedicalService>

@{
    ViewData["Title"] = "🏥 Quản lý Dịch vụ Y tế";
}

<div class="card shadow-sm p-4">
    <h2 class="mb-3 text-primary"><i class="bi bi-building"></i> Quản lý Dịch vụ Y tế</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="CreateMedicalService" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm dịch vụ
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            ⬅️ Quay về Quản lý Người dùng
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>🏷️ Tên dịch vụ</th>
                        <th>📋 Loại</th>
                        <th>📍 Địa chỉ</th>
                        <th>📞 SĐT</th>
                        <th>📝 Mô tả</th>
                        <th>⭐ Đánh giá</th>
                        <th>⚙️ Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Name</td>
                            <td>@s.Type</td>
                            <td>@s.Address</td>
                            <td>@s.Phone</td>
                            <td>@s.Description</td>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= s.Rating ? "bi-star-fill text-warning" : "bi-star text-secondary")"></i>
                                }
                            </td>
                            <td>
                                <a asp-action="EditMedicalService" asp-route-id="@s.ServiceID" class="btn btn-sm btn-outline-primary me-1">
                                    ✏️ Sửa
                                </a>
                                <form asp-action="DeleteMedicalService" asp-route-id="@s.ServiceID" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa dịch vụ này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Xoá</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">⚠️ Hiện chưa có dịch vụ nào được thêm vào hệ thống.</div>
    }
</div>
