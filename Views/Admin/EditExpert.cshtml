@model MeBeCare.Models.Expert
@{
    ViewData["Title"] = "Sửa chuyên gia";
}

<h2>✏️ Sửa chuyên gia</h2>

<form asp-action="EditExpert" asp-route-id="@Model.ExpertID" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ExpertID" />

    <div class="form-group">
        <label>Chuyên môn</label>
        <input asp-for="Field" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Bằng cấp</label>
        <input asp-for="Degree" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Kinh nghiệm (năm)</label>
        <input asp-for="ExperienceYears" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Tiểu sử</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Ảnh đại diện mới (nếu cần)</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
    {
        <div class="mt-2">
            <img src="@Model.ProfilePicture" alt="Ảnh hiện tại" style="max-height: 150px;" />
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">💾 Lưu</button>
    <a asp-action="ManageExperts" class="btn btn-secondary mt-3">❌ Hủy</a>
</form>
