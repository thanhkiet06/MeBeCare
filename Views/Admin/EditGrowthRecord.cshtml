@model MeBeCare.Models.GrowthRecord

<h2>✏️ Sửa chỉ số phát triển</h2>
<form asp-action="EditGrowthRecord" asp-route-id="@Model.GrowthRecordID" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GrowthRecordID" />

    <div class="form-group">
        <label>Bé</label>
        <select asp-for="ChildID" class="form-control" asp-items="ViewBag.Children as List<SelectListItem>">
            <option value="">-- Chọn bé --</option>
        </select>
        <span asp-validation-for="ChildID" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Ngày ghi nhận</label>
        <input asp-for="RecordDate" type="date" class="form-control" />
        <span asp-validation-for="RecordDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Cân nặng (kg)</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Chiều cao (cm)</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Vòng đầu (cm)</label>
        <input asp-for="HeadCircumference" class="form-control" />
        <span asp-validation-for="HeadCircumference" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Ghi chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">💾 Lưu</button>
    <a asp-action="ManageGrowthRecords" class="btn btn-secondary mt-3">❌ Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
