@model IEnumerable<MeBeCare.Models.User>

@{
    ViewBag.Title = "Quản lý Người dùng";
}

<h2>👤 Quản lý Người dùng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Họ</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <form asp-action="EditUser" asp-route-id="@user.UserID" method="get" style="display:inline">
                        <button type="submit" class="btn btn-primary btn-sm">Sửa</button>
                    </form>

                    <form asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xoá người dùng này?');">
                        <button type="submit" class="btn btn-danger btn-sm">Xoá</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
