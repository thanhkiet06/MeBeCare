@model MeBeCare.Models.GrowthRecord
@{
    ViewBag.Title = "Thêm chỉ số phát triển";
    var children = ViewBag.Children as List<MeBeCare.Models.Child> ?? new List<MeBeCare.Models.Child>();
}

<h2>➕ Thêm Chỉ Số Phát Triển</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Chọn bé</label>
        <select asp-for="ChildID" class="form-control">
            <option value="">-- Chọn bé --</option>
            @foreach (var child in children)
            {
                <option value="@child.ChildID">@child.FirstName @child.LastName</option>
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Ngày ghi nhận</label>
        <input asp-for="RecordDate" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Cân nặng (kg)</label>
        <input asp-for="Weight" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Chiều cao (cm)</label>
        <input asp-for="Height" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Chu vi vòng đầu (cm)</label>
        <input asp-for="HeadCircumference" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Ghi chú</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Huỷ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
