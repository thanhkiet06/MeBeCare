@model MeBeCare.Models.MedicalRecord

<h2 class="mb-3">➕ Thêm Hồ sơ Sức khỏe</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Chọn đối tượng</label>

        <!-- Nút thêm bé -->
        <div class="mb-2">
            <a href="/Child/Create" class="btn btn-sm btn-outline-primary">➕ Thêm bé mới</a>
        </div>

        @{
            var children = ViewBag.Children as List<MeBeCare.Models.Child> ?? new List<MeBeCare.Models.Child>();
        }

        <select asp-for="ChildID" class="form-control">
            <option value="">🤱 Mẹ</option>
            @foreach (var child in children)
            {
                <option value="@child.ChildID">👶 Bé: @child.FirstName @child.LastName</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <label>Loại hồ sơ</label>
        <select asp-for="RecordType" class="form-control">
            <option>Allergy</option>
            <option>Condition</option>
            <option>Medication</option>
            <option>Other</option>
        </select>
        <span asp-validation-for="RecordType" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Lưu hồ sơ</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Huỷ</a>
</form>
