@model IEnumerable<MeBeCare.Models.Article>
@{
    ViewData["Title"] = "Bài viết chuyên gia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .articles-wrapper {
        background-color: #fff0f6;
        padding: 40px 20px;
        border-radius: 10px;
    }

    .articles-header {
        text-align: center;
        margin-bottom: 40px;
    }

        .articles-header h2 {
            font-size: 30px;
            color: #d63384;
            font-weight: bold;
        }

    .article-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.1);
        background-color: #fff;
        transition: transform 0.2s;
    }

        .article-card:hover {
            transform: translateY(-5px);
        }

    .article-img {
        height: 220px;
        object-fit: cover;
    }

    .card-body h4 {
        font-weight: bold;
        color: #c2185b;
    }

    .card-body p {
        color: #555;
    }

    .btn-detail {
        background-color: #f06292;
        border: none;
        color: #fff;
        padding: 8px 18px;
        font-weight: 500;
        border-radius: 6px;
    }

        .btn-detail:hover {
            background-color: #e91e63;
        }
</style>

<div class="container articles-wrapper mt-4">
    <div class="articles-header">
        <h2>📄 Bài viết từ chuyên gia <span style="color:#e91e63">@ViewBag.AuthorName</span></h2>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var article in Model)
        {
            <div class="col">
                <div class="card article-card h-100">
                    @if (!string.IsNullOrEmpty(article.ImageUrl))
                    {
                        <img src="@article.ImageUrl" class="card-img-top article-img" alt="Ảnh bài viết" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@article.Title</h4>
                        <p class="card-text">
                            @(article.Content.Length > 200 ? article.Content.Substring(0, 200) + "..." : article.Content)
                        </p>
                        <div class="mt-auto">
                            <a asp-action="ArticleDetail" asp-route-id="@article.ArticleID" class="btn btn-detail">Xem chi tiết</a>
                            <a asp-action="ChuyenGia" asp-controller="Home" class="btn btn-back mt-3">⬅️ Quay lại danh sách chuyên gia</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
