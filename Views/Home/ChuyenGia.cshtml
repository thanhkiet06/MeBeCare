@model IEnumerable<MeBeCare.Models.Expert>
@{
    ViewData["Title"] = "Gặp Gỡ Chuyên Gia";
}

<head>
    <link rel="stylesheet" href="~/css/chuyengia.css" />
    <script src="~/js/experts.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gặp Gỡ Chuyên Gia - Mẹ và Bé</title>
</head>

<style>
    .experts-wrapper {
        background-color: #fff0f5;
        padding: 40px 20px;
    }

    .experts-title {
        color: #d63384;
        text-align: center;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .experts-subtitle {
        color: #6c757d;
        text-align: center;
        margin-bottom: 40px;
        font-style: italic;
    }

    .expert-card {
        background-color: #fff;
        border: 1px solid #f8d7da;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(220, 53, 69, 0.1);
        padding: 20px;
        margin-bottom: 30px;
        transition: transform 0.2s;
    }

        .expert-card:hover {
            transform: scale(1.02);
        }

    .expert-img img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
    }

    .expert-name {
        font-size: 20px;
        color: #d63384;
        margin-top: 15px;
        font-weight: bold;
    }

    .expert-specialty {
        font-weight: 600;
        color: #f06292;
        margin-bottom: 10px;
    }

    .expert-bio {
        font-size: 14px;
        color: #555;
        min-height: 70px;
    }

    .expert-actions a {
        margin-right: 10px;
        margin-top: 10px;
    }

    .btn-outline-primary {
        border-color: #ff69b4;
        color: #d63384;
    }

        .btn-outline-primary:hover {
            background-color: #ffb6c1;
            color: #fff;
        }

    .btn-outline-success {
        border-color: #d48dc2;
        color: #a0297c;
    }

        .btn-outline-success:hover {
            background-color: #f3c6db;
            color: #fff;
        }
</style>


<div class="experts-wrapper">
    <h1 class="experts-title">Gặp Gỡ Các Chuyên Gia</h1>
    <p class="experts-subtitle">Đội ngũ chuyên gia tận tâm hỗ trợ bạn trong hành trình chăm sóc mẹ và bé</p>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var expert in Model)
        {
            <div class="col">
                <div class="expert-card h-100">
                    <div class="expert-img">
                        <img src="@expert.ProfilePicture" alt="Ảnh chuyên gia" />
                    </div>
                    <div class="expert-content mt-3">
                        <h3 class="expert-name">@expert.User?.FirstName @expert.User?.LastName</h3>
                        <div class="expert-specialty">@expert.Field</div>
                        <p class="expert-bio">@expert.Bio</p>

                        <div class="expert-actions">
                            <a asp-controller="Home" asp-action="ExpertDetail" asp-route-id="@expert.ExpertID" class="btn btn-outline-primary btn-sm">
                                👤 Thông tin chuyên gia
                            </a>
                            <a asp-controller="Home" asp-action="ExpertArticles" asp-route-id="@expert.UserID" class="btn btn-outline-success btn-sm">
                                📄 Bài viết chuyên gia
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>