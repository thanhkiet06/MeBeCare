    <!-- Modal for Quiz -->
    <div class="modal" id="quizModal">
        <div class="modal-content">
            <button class="close-btn" onclick="closeQuizModal()">×</button>
            <h3>Khám phá tính năng phù hợp</h3>
            <p class="subtitle">Chỉ mất 2 bước để tìm giải pháp tốt nhất cho bạn!</p>

            <!-- Step 1 -->
            <div class="quiz-step active" id="step1">
                <div class="step-indicator">Bước 1/2</div>
                <p>Bạn hiện đang ở giai đoạn nào?</p>
                <input type="radio" name="stage" value="pregnant" id="pregnant">
                <label for="pregnant">Mẹ bầu</label>
                <input type="radio" name="stage" value="postpartum" id="postpartum">
                <label for="postpartum">Mẹ sau sinh</label>
                <input type="radio" name="stage" value="parent" id="parent">
                <label for="parent">Đã có bé</label>
                <div class="quiz-buttons">
                    <button class="next-btn" onclick="nextStep(1)">Tiếp theo</button>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="quiz-step" id="step2">
                <div class="step-indicator">Bước 2/2</div>
                <p>Điều bạn quan tâm nhất là gì?</p>
                <input type="radio" name="interest" value="tracking" id="tracking">
                <label for="tracking">Theo dõi sức khỏe</label>
                <input type="radio" name="interest" value="doctor" id="doctor">
                <label for="doctor">Kết nối với bác sĩ</label>
                <input type="radio" name="interest" value="community" id="community">
                <label for="community">Kết nối cộng đồng</label>
                <div class="quiz-buttons">
                    <button class="prev-btn" onclick="prevStep(2)">Quay lại</button>
                    <button class="submit-btn" onclick="submitQuiz()">Xem gợi ý</button>
                </div>
            </div>

            <!-- Result -->
            <div class="quiz-result" id="quizResult">
                <p id="resultText"></p>
                <a href="#" class="cta-link" id="resultCta">Tìm hiểu thêm</a>
            </div>
        </div>
    </div>

    <script>
        function openQuizModal() {
            const modal = document.getElementById('quizModal');
            modal.classList.add('active');
            resetQuiz();
        }

        function closeQuizModal() {
            const modal = document.getElementById('quizModal');
            modal.classList.remove('active');
            resetQuiz();
        }

        function resetQuiz() {
            document.getElementById('step1').classList.add('active');
            document.getElementById('step2').classList.remove('active');
            document.getElementById('quizResult').classList.remove('active');
            document.querySelectorAll('input[type="radio"]').forEach(input => input.checked = false);
        }

        function nextStep(currentStep) {
            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const stage = document.querySelector('input[name="stage"]:checked');

            if (currentStep === 1 && !stage) {
                alert('Vui lòng chọn một giai đoạn!');
                return;
            }

            step1.classList.remove('active');
            step2.classList.add('active');
        }

        function prevStep(currentStep) {
            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            step2.classList.remove('active');
            step1.classList.add('active');
        }

        function submitQuiz() {
            const stage = document.querySelector('input[name="stage"]:checked')?.value;
            const interest = document.querySelector('input[name="interest"]:checked')?.value;

            if (!interest) {
                alert('Vui lòng chọn một mối quan tâm!');
                return;
            }

            let resultText = '';
            let ctaLink = '';

            if (stage === 'pregnant' && interest === 'tracking') {
                resultText = 'Chúng tôi gợi ý bạn sử dụng tính năng <strong>Theo dõi thai kỳ</strong> để nhận thông tin chi tiết về sự phát triển của bé!';
                ctaLink = '/ThaiKy/Index';
            } else if (stage === 'postpartum' && interest === 'doctor') {
                resultText = 'Bạn nên thử tính năng <strong>Kết nối bác sĩ</strong> để được tư vấn kịp thời về sức khỏe sau sinh!';
                ctaLink = '/Home/ChuyenGia';
            } else if (stage === 'parent' && interest === 'community') {
                resultText = 'Tính năng <strong>Cộng đồng hỗ trợ</strong> sẽ giúp bạn kết nối với các bà mẹ khác và chia sẻ kinh nghiệm!';
                ctaLink = '/Home/TinhNang#cong-dong-ho-tro';
            } else {
                resultText = 'Hãy khám phá các tính năng của chúng tôi để tìm giải pháp phù hợp nhất cho bạn!';
                ctaLink = '/Home/TinhNang';
            }

            document.getElementById('step2').classList.remove('active');
            document.getElementById('quizResult').classList.add('active');
            document.getElementById('resultText').innerHTML = resultText;
            document.getElementById('resultCta').href = ctaLink;
        }

        // Đóng modal quiz khi nhấp ra ngoài
        window.onclick = function(event) {
            const quizModal = document.getElementById('quizModal');
            if (event.target === quizModal) {
                quizModal.classList.remove('active');
                resetQuiz();
            }
        }
    </script>
