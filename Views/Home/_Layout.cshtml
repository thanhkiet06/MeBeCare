<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Me&Be</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4">
            <div class="logo">
                <img src="https://insacmau.com/wp-content/uploads/2024/12/logo-me-be-8.jpg" alt="Logo">
                <h1>Mẹ&Bé</h1>
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Menu bên trái -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li><a asp-controller="Home" asp-action="HuongDan">Hướng dẫn</a></li>
                    <li><a asp-controller="Home" asp-action="ChuyenGia">Chuyên gia</a></li>
                    <li><a asp-controller="Home" asp-action="LienHe">Liên hệ</a></li>
                </ul>

                <!-- Góc phải: đăng nhập/đăng ký hoặc tên người dùng -->
                <div class="d-flex align-items-center">
                    @if (Context.Session.GetString("UserID") != null)
                    {
                        <span class="me-3 text-pink fw-semibold">👋 Xin chào, @Context.Session.GetString("FullName")</span>
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-pink">Đăng xuất</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-pink me-2">Đăng nhập</a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-pink">Đăng ký</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center py-3 text-muted bg-light">
        &copy; @DateTime.Now.Year - Me&Be. All rights reserved.
    </footer>

    
</body>
</html>
