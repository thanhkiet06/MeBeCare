@model MeBeCare.Models.Expert
@{
    ViewData["Title"] = "Thông tin chuyên gia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .expert-detail-container {
        background-color: #fff0f5;
        padding: 40px 20px;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(255, 105, 180, 0.2);
    }

    .expert-detail-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 0 10px rgba(220, 53, 69, 0.08);
    }

    .expert-img img {
        width: 100%;
        border-radius: 12px;
        box-shadow: 0 2px 10px rgba(255, 105, 180, 0.1);
    }

    .expert-name {
        font-size: 26px;
        color: #d63384;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .expert-field {
        color: #f06292;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .expert-info p {
        font-size: 16px;
        color: #555;
        margin-bottom: 8px;
    }

    .expert-info strong {
        color: #a0297c;
    }

    .btn-back {
        margin-top: 20px;
        color: #fff;
        background-color: #f06292;
        border: none;
        padding: 8px 18px;
        border-radius: 6px;
        font-weight: 500;
    }

        .btn-back:hover {
            background-color: #e83e8c;
        }
</style>

<div class="container expert-detail-container mt-4">
    <div class="expert-detail-card row">
        <div class="col-md-4 expert-img">
            <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : "/images/default-expert.png")" alt="Ảnh chuyên gia" />
        </div>
        <div class="col-md-8 expert-info">
            <h2 class="expert-name">@Model.User?.FirstName @Model.User?.LastName</h2>
            <div class="expert-field">@Model.Field</div>

            <p><strong>Bằng cấp:</strong> @Model.Degree</p>
            <p><strong>Kinh nghiệm:</strong> @Model.ExperienceYears năm</p>
            <p><strong>Tiểu sử:</strong> @Model.Bio</p>
            <p><strong>Email:</strong> <a href="mailto:@Model.User?.Email">@Model.User?.Email</a></p>

            <a asp-action="ChuyenGia" asp-controller="Home" class="btn btn-back mt-3">⬅️ Quay lại danh sách chuyên gia</a>
        </div>
    </div>
</div>
